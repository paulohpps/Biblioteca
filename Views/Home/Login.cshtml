@{
    ViewData["Title"] = "Login";
}
    <div class="row justify-content-center">
        <div class="col-6">
            <h1 class="text-center">Bem vindo ao sistema Biblioteca</h1>
            <form asp-action="Login" asp-controller="Home" method="POST">
                <div class="mt-3">
                    <label >Login</label>
                    <input type="text" placeholder="Login" class="form-control" name="login" />
                </div>
                <div class="mt-3">
                    <label>Senha</label>
                    <input type="password" placeholder="Senha" class="form-control" name="senha"/>
                </div>
            <input type="submit" class="btn btn-primary mt-3" value="Entrar" />
            </form>
            <p class="text-danger">@ViewData["Erro"]</p>
        </div>
    </div>