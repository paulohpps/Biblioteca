@model Usuario
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input asp-for="Login" class="form-control"/>
        </div>
        <div>
            <label asp-for="Senha">Nova Senha</label>
            <input type="password" asp-for="Senha" value="" class="form-control"/>
        </div>
        <input type="submit" value="Salvar" class="mt-3 btn btn-primary"/>
        <p class="text-danger">@ViewData["Erro"]</p>
    </form>
</div>